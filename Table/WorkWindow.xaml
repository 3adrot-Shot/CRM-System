                                                            Storyboard.TargetProperty="Width"
                                                            BeginTime="0:0:0"
                                                            From="170" To="46"
                                                            Duration="0:0:0">
                                                    </DoubleAnimation>
                                                    <!--Анимация скрытия высоты-->
